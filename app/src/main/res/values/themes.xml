<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NLInterface" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorTertiary">@color/red</item>
        <item name="colorAccent">@color/grey_light</item>

        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fillColor">@color/white</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="editTextBackground">@color/grey_dark</item>
        <item name="editTextColor">@color/black</item>

        <item name="colorBackgroundFloating">@color/black</item>

        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.NLInterface" parent="Base.Theme.NLInterface" />


    <!-- Alert Dialog -->
    <style name="ThemeOverlay.MaterialComponents.MaterialAlertDialog_Background" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color-->
        <item name="android:backgroundTint">@color/white</item>
        <!-- Text Color for title and message -->
        <item name="colorOnSurface">@color/black</item>
        <!-- Style for positive button -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <!-- Style for negative button -->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <!-- Alert Dialog Positive Button-->
    <style name="PositiveButtonStyle" parent="@style/Widget.AppCompat.Button">
        <!-- text color for the button -->
        <item name="android:textColor">@color/white</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">@color/black</item>
    </style>

    <!-- Alert Dialog Negative Button-->
    <style name="NegativeButtonStyle" parent="@style/Widget.AppCompat.Button">
        <!-- text color for the button -->
        <item name="android:textColor">@color/white</item>
        <!-- Background tint for the button -->
        <item name="android:backgroundTint">@color/grey_light</item>
    </style>

    <style name="ThemeOverlay.NLInterface.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

</resources>