<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="131dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="131dp"
        android:autoSizeTextType="uniform"
        android:text="@string/settings"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="209dp"
        android:layout_height="632dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <TextView
            android:id="@+id/settings_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="60dp"
            android:autoSizeTextType="uniform"
            android:text="@string/settings_language"
            android:textAlignment="viewStart"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/settings_impairment"
            android:layout_width="142dp"
            android:layout_height="55dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="65dp"
            android:autoSizeTextType="uniform"
            android:text="@string/settings_impairment"
            android:textAlignment="viewStart"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/settings_colors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="60dp"
            android:autoSizeTextType="uniform"
            android:text="@string/settings_colors"
            android:textAlignment="viewStart"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/settings_layout"
            android:layout_width="154dp"
            android:layout_height="61dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="60dp"
            android:autoSizeTextType="uniform"
            android:hint="@string/settings_layout_explanation"
            android:text="@string/settings_layout"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/settings_voice_command"
            android:layout_width="150dp"
            android:layout_height="49dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="50dp"
            android:autoSizeTextType="uniform"
            android:text="@string/settings_voice_command"
            android:textAlignment="viewStart"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="194dp"
        android:layout_height="619dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <Spinner
            android:id="@+id/language_dropdown"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="25dp"
            android:background="#F3C27A"
            android:labelFor="@id/settings_language" />

        <Spinner
            android:id="@+id/impairment_dropdown"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="25dp"
            android:background="#F3C27A"
            android:labelFor="@id/settings_impairment" />

        <Spinner
            android:id="@+id/colors_dropdown"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="25dp"
            android:background="#F3C27A"
            android:labelFor="@id/settings_colors" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/layout_switch"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="25dp"
            android:labelFor="@id/settings_layout" />

        <Spinner
            android:id="@+id/voice_command_dropdown"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="25dp"
            android:background="#F3C27A"
            android:labelFor="@id/settings_voice_command" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>